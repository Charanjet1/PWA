{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/generate-pdf",
      "dest": "/server.js"
    },
    {
      "src": "/api/health",
      "dest": "/server.js"
    },
    {
      "src": "/api/pdfs",
      "dest": "/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/",
      "dest": "/public/app.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}